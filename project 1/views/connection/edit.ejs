<%- include('../partials/header.ejs')%>
    <main>
        <div class="text-center">
            <div class="center-block">
                <div class="col-md-5 col-md-offset-4">
                    <form method = 'POST' action = '/connections/<%= connection.id%>?_method=PUT' >
                        <div class="form-group">
                        <label for="category">Category:</label><br>
                        <input type="text" class="form-control" id="category" name="category" value="<%= connection.category%>">
                        </div>
                        <div class="form-group">
                            <label for="title">Title:</label>
                            <input type="text" class="form-control" id="title" value="<%= connection.title%>" name="title">
                        </div>    
                        <div class="form-group">
                            <label for="host">Host:</label>
                            <input type="text" class="form-control" id="host" value="<%= connection.host%>" name="host">
                        </div>
                        <div class="form-group">
                            <label for="details">Details:</label>
                            <textarea class="form-control" id="details" placeholder="Enter details of event" name="details"><%= connection.details%></textarea>
                        </div>
                        <div class="form-group">
                            <label for="location">location:</label>
                            <input type="text" class="form-control" id="location" value="<%= connection.location%>" name="location">
                        </div>
                        <div class="form-group">
                            <label for="date">Date:</label>
                            <input type="date" class="form-control" id="date" value="<%= connection.date%>" name="date">
                        </div>
                        <div class="form-group">
                            <label for="start">Start:</label>
                            <input type="time" class="form-control" id="start" value="<%= connection.start%>" name="start">
                        </div>
                        <div class="form-group">
                            <label for="end">End:</label>
                            <input type="time" class="form-control" id="end" value="<%= connection.end%>" name="end">
                        </div>
                        <div class="form-group">
                            <label for="image">Thumbnail URL:</label>
                            <input type="url" class="form-control" id="image" value="<%= connection.image%>" name="image"> 
                        </div>
                        <button id="create_new" class="btn btn-default">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </main>
<%- include('../partials/footer.ejs')%>