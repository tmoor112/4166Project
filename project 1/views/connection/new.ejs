<%- include('../partials/header.ejs')%>
    <main>
        <div class="text-center">
            <div class="center-block">
                <div class="col-md-5 col-md-offset-4">
                    <form action = '/connections' method = 'POST'>
                        <div class="form-group">
                        <label for="category">Category:</label><br>
                        <input type="text" class="form-control" id="category" name="category" placeholder="Offline or Online?">
                        </div>
                        <div class="form-group">
                            <label for="title">Title:</label> 
                            <input type="text" class="form-control" id="title" placeholder="Enter title name" name="title">
                        </div>    
                        <div class="form-group">
                            <label for="host">Host:</label>
                            <input type="text" class="form-control" id="host" placeholder="Enter host name" name="host">
                        </div>
                        <div class="form-group">
                            <label for="details">Details:</label>
                            <input type="text" class="form-control" id="details" placeholder="Enter details of event" name="details">
                        </div>
                        <div class="form-group">
                            <label for="location">location:</label>
                            <input type="text" class="form-control" id="location" placeholder="Enter location where the event is taking place" name="location">
                        </div>
                        <div class="form-group">
                            <label for="date">Date:</label>
                            <input type="date" class="form-control" id="date" name="date">
                        </div>
                        <div class="form-group">
                            <label for="start">Start:</label>
                            <input type="time" class="form-control" id="start" name="start">
                        </div>
                        <div class="form-group">
                            <label for="end">End:</label>
                            <input type="time" class="form-control" id="end" name="end">
                        </div>
                        <div class="form-group">
                            <label for="image">Thumbnail URL:</label>
                            <input type="url" class="form-control" id="image" placeholder="image url" name="image"> 
                        </div>
                        <button class="btn btn-default">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </main>
<%- include('../partials/footer.ejs')%>